{
  "name": "devbasenestprisma",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "docker:up": "docker-compose -f '../db/docker-compose.yml' --env-file ../.env up -d --build",
    "docker:down": "docker-compose -f '../db/docker-compose.yml' --env-file ../.env down",
    "start:db": "npm run prisma:generate && npm run prisma-migrate",
    "start:dev": "nest start --watch",
    "start:dev-i18copy": "npm run copy-assets && npm run start:dev",
    "prisma:studio": "dotenv -e ../../.env -- npx prisma studio",
    "seed": "dotenv -e ../.env ts-node prisma/seed.ts",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "copy-assets": "cp -rv src/i18n dist/src/",
    "copy-prisma": "cp -rv ../node_modules/.prisma ../../frontend/src/app/prisma",
    "start": "nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "prisma-migrate": "dotenv -e ../.env -- npx prisma migrate dev --preview-feature"
  },
  "dependencies": {
    "@biesbjerg/ngx-translate-extract-marker": "^1.0.0",
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.6.11",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.11",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mapped-types": "^0.3.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.11",
    "@prisma/client": "^2.16.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "express": "4.17.1",
    "fs-extra": "^9.1.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "nestjs-i18n": "^8.0.11",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "password-hash-and-salt": "^0.1.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "sharp": "^0.27.1",
    "typesync": "^0.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.11",
    "prisma": "^2.16.1",
    "nestjs-prisma": "^0.8.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/express": "^4.17.11",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.25",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/password-hash-and-salt": "^0.1.0",
    "@types/prettier": "^2.2.0",
    "@types/rimraf": "^3.0.0",
    "@types/sharp": "^0.27.1",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prisma-dbml-generator": "^0.4.0",
    "prisma-json-schema-generator": "^1.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.16",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
