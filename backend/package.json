{
  "name": "devbasenestprisma",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "docker:up": "docker-compose -f '../db/docker-compose.yml' --env-file ../backend/.env up -d --build",
    "docker:down": "docker-compose -f '../db/docker-compose.yml' --env-file ../backend/.env down",
    "start:db": "npm run prisma:generate && npm run prisma-migrate",
    "start:dev": "nest start --watch",
    "start:dev-i18copy": "npm run copy-assets && npm run start:dev",
    "prisma:studio": "dotenv -e ../.development.env -- npx prisma studio",
    "seed": "dotenv -e ../.development.env ts-node prisma/seed.ts",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "copy-assets": "cp -rv src/i18n dist/src/",
    "start": "nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "prisma-migrate": "dotenv -e ../.development.env -- npx prisma migrate dev --preview-feature",
    "preinstall": "typesync || :"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.6.5",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.6.5",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mapped-types": "^0.1.1",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.5",
    "@prisma/client": "^2.14.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "fs-extra": "^9.0.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "nestjs-i18n": "^8.0.10",
    "nestjs-prisma": "^0.8.0",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "password-hash-and-salt": "^0.1.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "sharp": "^0.27.0",
    "typesync": "^0.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.6",
    "@nestjs/testing": "^7.6.5",
    "@prisma/cli": "^2.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.20",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^0.4.7",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/password-hash-and-salt": "^0.1.0",
    "@types/prettier": "^2.1.6",
    "@types/rimraf": "^3.0.0",
    "@types/sharp": "^0.27.1",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prisma-dbml-generator": "^0.4.0",
    "prisma-json-schema-generator": "^1.2.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
